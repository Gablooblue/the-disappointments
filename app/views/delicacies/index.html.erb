<div class = "container">
    <% @delicacies.each do |delicacy| %>
	<div class = "col-md-4">
	    <div class = "card">
		<div class = "card-body">
		    <h4 class = "card-title">
			<%= delicacy.name %>
		    </h4>
		    <p class = "card-text">
			<%= delicacy.desc %>
		    </p>
		</div>
	    </div>
	</div>
    <% end %>
</div>
